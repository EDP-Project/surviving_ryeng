$(function(){
  <% if @guide.valid? %>
    $('#flash-messages').html("<%= j render partial: 'shared/flash_messages', flash: flash %> ");
    <% flash[:notice] = nil %>
    //$('#guide-count').text("<%= j (@course.guides.count + 1).to_s %>");
    $('#new-guide-trigger').hide();
    $('#new-guide-modal').modal('hide');

  <% else %>
    $('#flash-messages').html("<%= j render partial: 'shared/flash_messages', flash: flash %> ");
    <% flash[:error] = nil %>
    $('#guide-error-container').html("<%= j render 'shared/errors', record: @guide %>");
  <% end %>
});