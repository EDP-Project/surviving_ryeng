<div class="modal fade" id="new-attachment-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= "Add attachment for #{course.course_code}" %></h4>
      </div>
      <div class="modal-body">
        <div id="error-container">
          <%= render 'shared/errors', record: attachment %>  
        </div>
        <%= form_for attachment, remote: true, html: { multipart: true } do |f| %>
        <div class="control-group">
          <%= f.label :attachments, :class => 'control-label' %>
          <div class="controls">
            <!-- ATTACHMENTS UPLOAD -->
            <%= file_field_tag "uploads[]", type: :file, multiple: true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :description, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :description, class: 'text_area' %>
          </div>
          <%= f.hidden_field :attachable_type, value: "Course" %>
          <%= f.hidden_field :attachable_id, value: course.id %>
        </div>

        
      </div>
      <div class="modal-footer">
        <%= f.submit 'Submit Attachment', class: 'btn btn-primary', id: 'attachment-submit', remote: true %>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
        
