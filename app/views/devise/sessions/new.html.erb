<div class="main-card" id="devise-container">
	<h2>Sign in</h2> <hr>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		
			<div class="input">
				<%= f.text_field :login, placeholder: 'Enter your login', id: 'login', required: true, autofocus: true, value:nil %>
				<label for="login">Login</label>
				<span class="help-block">Your email or username</span>
			</div>

			<div class="input">
				<%= f.password_field :password, placeholder: 'Enter your password', id:'pass', required: true, autocomplete: "off" %>
				<label for="pass">Password</label>
			</div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="input">
		    	<%= f.check_box :remember_me, id: 'remember' %> 
					<label for="remember">Remember me</label>
		    </div>
		  <% end -%>

		  <div><%= f.submit "Sign in", class: 'btn btn-custom' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
</div>
