//-- Inbox AJAX pagination
<% if @inbox.any? %>
  $('#i-pag').html("<center><%= j paginate @inbox, remote: true, param_name: 'ipage' %></center>");
  $('#inbox').html("<%= j render 'box', box: @inbox %>");
<% end %>

//-- Sentbox AJAX pagination
<% if @sent.any? %>
  $('#s-pag').html("<center><%= j paginate @sent, remote: true, param_name: 'spage' %></center>");
  $('#sentbox').html("<%= j render 'box', box: @sent %>");
<% end %>

