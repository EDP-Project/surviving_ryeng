<div class="main-card">
  <div class="row">
  <div class="custom-box" id= "conversations-show-box">
    <h2>
      <%= truncate(conversation.subject, length: 50) %> %>
      <% if conversation.is_completely_trashed? (current_user)%>
        <div id="convo-show-trash">
          <%= link_to untrash_conversation_path(conversation), method: :post do %>
          <span class="fa fa-mail-reply"></span> 
          <% end %>
        </div>
      <% else %>
        <div id="convo-show-trash">
          <%= link_to trash_conversation_path(conversation), method: :post do %>
          <span class="fa fa-trash-o"></span> 
          <% end %>
        </div>
      <% end %>
    </h2>

    <div class="qa-message-list" id="wallmessages">
    <% conversation.receipts_for(current_user).each do |receipt| %>
      <% message = receipt.message %>
      <div class="message-item" id="m16">
        <div class="message-inner">
          <div class="message-head clearfix">
            <div class="avatar pull-left">
              <%= gravatar_for message.sender, size: 60 %>
            </div>
            <div class="user-detail">
                
              <h5 class="handle"><%= message.subject %></h5>
              <div class="post-meta">
                <div class="asker-meta">
                  <span class="qa-message-what"></span>
                  <span class="qa-message-when">
                    <span class="qa-message-when-data"><strong class="info-header">Sent: </strong><%= conversation.updated_at %></span>
                  </span>
                  <span class="qa-message-who">
                    <span class="qa-message-who-pad">, by </span>
                    <span class="qa-message-who-data">
                    <%= link_to "#{message.sender.first_name} #{message.sender.last_name}", message.sender %>
                    </span>
                  </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="qa-message-content">
              <p><%= message.body %></p>
            </div>
          </div>
      </div>
    <% end %><br>
    <h2>Send a reply</h2>

    <%= form_for :message, url: reply_conversation_path(conversation)  do |f| %>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">Subject</span>
          <%= f.text_field :subject, class: 'form-control' %>
        </div>
      </div>
      <%= f.label :body, 'Message'%><br>
      <div class="form-group">
        <div class="input-group">
          <%= f.text_area :body, class: 'expanding form-control', size: "80x3" %><br>
        </div>
      </div>

      <%= f.submit 'Send', class: 'btn' %>
    <% end %>
  </div>
</div>
</div>