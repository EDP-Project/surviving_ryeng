$(function(){
//-- Course AJAX pagination
<% if @courses.any? %>
  $('#c-pag').html("<center><%= j paginate @courses, remote: true, param_name: 'cpage' %></center>");
  $('#search-courses').html("<%= j render 'shared/courses', courses: @courses %>");
<% end %>

//-- User AJAX pagination
<% if @users.any? %>
  $('#u-pag').html("<center><%= j paginate @users, remote: true, param_name: 'upage' %></center>");
  $('#search-users').html("<%= j render 'shared/users', users: @users %>");
<% end %>

//-- Guide AJAX pagination
<% if @guides.any? %>
  $('#g-pag').html("<center><%= j paginate @guides, remote: true, param_name: 'gpage' %></center>");
  $('#search-guides').html("<%= j render 'shared/guides', guides: @guides %>");
<% end %>

//-- Attachment AJAX pagination
<% if @attachments.any? %>
  $('#a-pag').html("<center><%= j paginate @attachments, remote: true, param_name: 'apage' %></center>");
  $('#search-attachments').html("<%= j render 'shared/attachments', attachments: @attachments %>");
<% end %>

});