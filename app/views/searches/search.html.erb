<div class="main-card">
  <h2>Your search for "<%= truncate @query, length: 50 %>" returned <%= @results %> results</h2>
  <div class="search-wrapper">
    <% if @courses.any? %>
    <!-- COURSE RESULTS HERE -->
    <h4>Course results (<%= @c_size %>) &nbsp; <%= link_to '', courses_path(q: params[:q]), class: 'fa fa-external-link' %></h4>
    <hr>
    <div id="search-courses">
      <%= render 'shared/courses', courses: @courses %>
    </div>
    <div id="c-pag">
      <center><%= paginate @courses, param_name: 'cpage', remote: true %></center>
    </div>
  <% end %>

  <% if @users.any? %>
    <!-- USER RESULTS HERE -->
    <h4>User results (<%= @u_size %>) &nbsp; <%= link_to '', users_path(q: params[:q]), class: 'fa fa-external-link' %></h4> 
    <hr>
    <div id="search-users">
      <div class="row">
        <%= render 'shared/users', users: @users %>
      </div>
    </div>
    <div id="u-pag">
      <center><%= paginate @users, param_name: 'upage', remote: true %></center>
    </div>
  <% end %>

  <% if @guides.any? %>
    <!-- GUIDE RESULTS HERE -->
    <h4>Guide results (<%= @g_size %>) &nbsp; <%= link_to '', guides_path(q: params[:q]), class: 'fa fa-external-link' %></h4> 
    <hr>
    <div id="search-guides">
      <%= render 'shared/guides', guides: @guides %>
    </div>
    <div id="g-pag">
      <center><%= paginate @guides, param_name: 'gpage', remote: true %></center>
    </div>
  <% end %>

  <% if @attachments.any? %>
    <!-- ATTACHMENT RESULTS HERE -->
  <h4>Attachment results (<%= @a_size %>) &nbsp; <%= link_to '', attachments_path(q: params[:q]), class: 'fa fa-external-link' %></h4>
  <hr>
    <div id="search-attachments">
      <%= render 'shared/attachments', attachments: @attachments, favourite: false %>
    </div>
    <div id="a-pag">
      <center><%= paginate @attachments, param_name: 'apage', remote: true %></center>
    </div>
  <% end %>
  </div>
</div>