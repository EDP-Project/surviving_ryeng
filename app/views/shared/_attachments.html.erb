<div class="row">
  <% attachments.each do |a| %>
    <div class="col-xs-6">
      <div class="card">                
        <div class="card-image"> 
          <%= link_to attachment_icon_for(a), a %>
        </div>
        
        <div class="card-info">
          
          <div class="name">
            <p><%= link_to a.upload_file_name, a %></p> 
          </div>
          
          <hr>
          
          <div class="content">
            <p>
              <b>For <%= a.attachable_type.downcase %>:</b> 
              <% if a.attachable_type == "Course" %>  
                <%= link_to a.attachable.course_code, course_path(course_code: a.attachable.course_code) %>
              <% elsif a.attachable_type == "Guide" %>
                <%= link_to a.attachable.title, a.attachable %>
              <% end %>
              <br>
              <b>Uploader: </b> 
              <%= link_to a.user.username, user_path(username: a.user.username) %>
            </p>
            <p><b>Downloads:</b> <%= a.download_count %></p>
          </div>
        </div>
      </div>    
    </div>
  <% end %>
</div>