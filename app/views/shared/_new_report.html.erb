<div class="modal fade" id="new-report-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= "Create new report for this #{type.downcase}" %></h4>
      </div>
      <div class="modal-body">
        <div id="error-container">
          <%= render 'shared/errors', record: report %>  
        </div>
        <%= form_for report, remote: true do |f| %>
        <div class="control-group">
          <%= f.label :subject, :class => 'control-label' %>
          <div class="controls">
            <!-- ATTACHMENTS UPLOAD -->
            <%= f.text_field :title, autofocus: true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :reason, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :reason, class: 'text_area' %>
          </div>
          <%= f.hidden_field :reportable_type, value: type %>
          <%= f.hidden_field :reportable_id, value: reportable.id %>
        </div>

        
      </div>
      <div class="modal-footer">
        <%= f.submit 'Submit Report', class: 'btn btn-primary', id: 'report-submit'%>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
        