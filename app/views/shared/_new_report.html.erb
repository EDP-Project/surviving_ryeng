<div class="modal fade" id="new-report-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= "Create new report against this #{type.downcase}" %></h4>
      </div>
      <div class="modal-body">
        <div id="report-error-container">
          <%= render 'shared/errors', record: report %>  
        </div>
        <%= form_for report, remote: true do |f| %>

        <div class="input">
          <%= f.text_field :title, placeholder: 'Enter report title', id: 'title', required: true, autofocus: true %>
          <label for="title">Title</label>
          <span class="help-block">Keep it simple (you may elaborate below)</span>
        </div>

        <div class="input">
          <%= f.text_area :reason, placeholder: 'Please tell us why you are submitting the report', id: 'reason' %>
          <label for="reason">Reason</label>
          <%= f.hidden_field :reportable_type, value: type %>
          <%= f.hidden_field :reportable_id, value: reportable.id %>
        </div>
        
      </div>
      <div class="modal-footer">
        <%= f.submit 'Submit Report', class: 'btn btn-primary', id: 'report-submit'%>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
        