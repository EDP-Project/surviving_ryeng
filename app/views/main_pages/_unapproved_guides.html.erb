 <div class="row">
  <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
    <div id="unapproved-guides-container">
      <ul class="event-list">
      <% unapproved_guides.each do |g| %>  
        <li>
          
          <div class="info">
            <h2 class="title"><%= truncate g.title, length: 25 %></h2>
            <p class="desc">
              Guide for <%= g.course.course_code %> <br>
              by: <%= link_to g.user.username, user_path(username: g.user.username) %>
            </p>
          </div>
          <div class="social">
            <ul>
              <li class="facebook" style="width:33%;">
                <%= link_to guide_path(g) do %>
                  <i class="fa fa-rocket"></i>
                <% end %> 
              </li>
              <li class="google-plus" style="width:33%;">
                <%= link_to guide_path(g), method: :delete do %>
                  <i class="fa fa-times"></i>
                <% end %> 
              </li>
            </ul>
          </div>
        </li>
      <% end %>    
      </ul>
    </div>
  </div>
</div>