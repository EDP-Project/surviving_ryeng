<div class="main-card">
  
    <h2>Hello, <%= current_user.username %>. Welcome to the Administrator's feed</h2><hr>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel with-nav-tabs panel-primary">
            <div class="panel-heading">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#reports-tab" data-toggle="tab">Reports</a></li>
                <li><a href="#guides" data-toggle="tab">Pending Guides</a></li>
                <li><a href="#attachments" data-toggle="tab">Pending Course Attachments</a></li>
              </ul>
            </div>
            <div class="panel-body">
              <div class="tab-content">
                  <div class="tab-pane fade in active" id="reports-tab">

                    <%= render 'reports', reports: @reports %>
                    <%= paginate @reports, param_name: :rp %>
                  
                  </div>
                  <div class="tab-pane fade" id="guides">
                  
                    <%= render 'unapproved_guides', unapproved_guides: @unapproved_guides %>
                    <%= paginate @unapproved_guides, param_name: :gp %>
                  
                  </div>
                  <div class="tab-pane fade" id="attachments">
                  
                    <%= render 'unapproved_attachments', attachments: @unapproved_attachments %>
                    <%= paginate @unapproved_attachments, param_name: :ap %>

                  </div>
              </div>
            </div>
        </div>
    </div>
</div>


</div>